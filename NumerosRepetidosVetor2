#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

//mostra que os números repetidos são os consecutivos e não os anteriores

int main() {
    setlocale(LC_ALL,"Portugues");
    int tam, aux,j,i;
    //determina o tamanho do vetor
    printf("Digite o tamanho do vetor:\n");
    scanf("%d",&tam);
    printf("\n");
    
    int vet[tam];
    //preencher vetor
    printf("Digite os %d números inteiros: \n", tam);
    for(i=0;i<tam;i++){
        scanf("%d",&vet[i]);
    }
    // mostrar números repetidos do vetor
    printf("Números repetidos do vetor\n");
    for(i=0;i<tam;i++){
        aux=0;
        for (j = i-1; j>= 0; j--){
            if(vet[i] == vet[j]){
                aux=1;
            }
        }
        if(aux == 1){
            printf("%d \n",vet[i]);
        }
    }
    
    
    return 0;
}
