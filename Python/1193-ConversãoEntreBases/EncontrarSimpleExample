def encontra_tipo(n):
    if n.isdigit():
        return "decimal"
    if n.startswith("0b"):
        return "binário"
    if n.startswith("0x"):
        return "hexadecimal"
    
    return "desconhecido"
    
def conversao(tipo, n):
    if tipo == "decimal":
        n_inteiro = int(n)
        binario = bin(n_inteiro)
        hexa = hex(n_inteiro)
        print("Versão binária:", binario)
        print("Versão hexadecimal:", hexa)
  

n = input("Digite um número:\n")
tipo = encontra_tipo(n)
print("O número é do tipo:", tipo)
conversao(tipo, n)
