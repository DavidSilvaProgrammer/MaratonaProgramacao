linhas = int(input("Digite a quantidade de linhas da matriz: "))

matriz = []
for i in range(linhas):
    colunas = int(input(f"Digite a quantidade de colunas da linha {i+1}: "))
    linha = []
    for j in range(colunas):
        elemento = int(input(f"Digite o valor do elemento [{i}][{j}]: "))
        linha.append(elemento)
    matriz.append(linha)

print(matriz)
