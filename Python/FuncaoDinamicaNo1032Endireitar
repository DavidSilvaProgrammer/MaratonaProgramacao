def eh_primo(num):
    if num < 2:
        return False
    for i in range(2, int(num ** 0.5) + 1):
        if num % i == 0:
            return False
    return True

def n_esimo_primo(n):
    count = 0
    num = 2
    while count < n:
        if eh_primo(num):
            count += 1
            if count == n:
                return num
        num += 1

print(f"O {n}-ésimo número primo é: {n_esimo_primo(n)}")

